<MudGrid Justify="Justify.FlexStart" Class="d-flex flex-column">
    <MudItem xs="12" sm="12" md="12" lg="12">
        <MudNavLink Href="/request/dashboard" Class="card-button-dash">
            <MudPaper Class="card-dash pa-4" Elevation="1" Outlined="true" Style="cursor: pointer;">
                <MudGrid Class="d-flex flex-row justify-space-between">
                    <MudItem xs="12" sm="12" md="12" lg="12">
                        <div class="d-flex align-center justify-space-between">
                            <div class="d-flex align-center gap-2">
                                <MudText Typo="Typo.h6">
                                    @IconTitle @Title
                                </MudText>
                                <MudChip T="string" Variant="Variant.Text" Color="GetColorStatus()" Size="Size.Small">@Status</MudChip>
                            </div>
                            <div class="d-flex align-center gap-2">
                                <MudIcon Icon="@Icons.Material.Outlined.ThumbUp" Size="Size.Small" />
                                @VoteCounting
                            </div>
                        </div>
                        <div class="pt-1">
                            <MudText Style="color: #828282;">
                                @Observation
                            </MudText>
                        </div>
                        <div class="d-flex align-center justify-space-between pt-2">
                            <div class="d-flex align-center justify-center gap-1">
                                <MudIcon Icon="@Icons.Material.Outlined.AccessTime" Size="Size.Small" Style="font-size: 0.75rem;" />
                                <MudText Style="font-size: 0.75rem; line-height: 1rem;">Est. delivery: @DeliveryDate</MudText>
                            </div>
                            <MudIconButton Icon="@Icons.Material.Outlined.ArrowRightAlt" Class="pa-0" />
                        </div>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudNavLink>
    </MudItem>
</MudGrid>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string IconTitle { get; set; }
    [Parameter] public string Observation { get; set; }
    [Parameter] public string Status { get; set; }
    [Parameter] public string DeliveryDate { get; set; }
    [Parameter] public string VoteCounting { get; set; }

    protected Color GetColorStatus()
    {
        return Status switch
        {
            "In Development" => Color.Info,
            "Under Review" => Color.Warning,
            "Completed" => Color.Success,
            "In Testing" => Color.Surface,
            _ => Color.Default
        };
    }
}
